{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./app",
    "outDir": "./dist" // Carpeta de salida de archivos compilados
  },
  "include": ["app"],
  "exclude": ["node_modules", "dist"]
}
